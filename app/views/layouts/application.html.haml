!!!
%html
  %head
    %meta{ content: "text/html; charset=UTF-8", http: { equiv: "Content-Type" } }/
    %title ChatSpace
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', data: { turbolinks: { track: 'reload' } }
    = javascript_include_tag 'application', data: { turbolinks: { track: true } }
  %body
    .flash
    - if notice
      %p.flash__notice
        = notice
    - if alert
      %p.flash__alert
        = alert
    = yield
