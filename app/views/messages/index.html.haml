.chat
  = render 'groups/side'

  .chat-main
    .chat-header
      .chat-header--left
        = @group.name
        %p.chat-header__users
          Member:
          = @group.users.pluck(:name).join(", ")
      .chat-header--right
        = link_to 'Edit', edit_group_path(@group), class: 'chat-header__edit-btn'

    .chat-body
      %ul.chat-messages
        - @messages.each do |message|
          %li.chat-message
            .chat-message__header
              %p.chat-message__header__name
                = message.user.name
              %p.chat-message__header__time
                = message.created_at
            %br/
            %p.chat-message__body
              = message.body

    .chat-footer
      = form_for [@group, @message] do |f|
        .footer__body
          = f.text_area :body, placeholder: "type a message", row: "1"
          %label.chat-footer__file
            = f.file_field :image
            %i.fa.fa-picture-o
          = f.submit "Send"
